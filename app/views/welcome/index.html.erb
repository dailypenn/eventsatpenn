<h3>Ooh a Calendar</h3>

<div class="row">
  <div class="col-md-8">
    <select class="form-control pull-left calendar-filter" disabled>
      <option>Filter Events by Category</option disabled>
    </select>
    <a class="btn btn-info pull-right calendar-create">Add an Event</a>
    <%= month_calendar(attribute: :start_date, end_attribute: :end_date, events: @events) do |date, meetings| %>
      <div class="date"><%= date.day %></div>
      <% meetings.each do |event| %>
        <div class="calendar-event">
          <%= event.title %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default calendar-sidebar">
      <div class="panel-body">
        <h2>Welcome to Events@Penn</h2>
