<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>


  <div class="field">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date, id: :event_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date, id: :event_end_date %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :event_description %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :event_category %>
  </div>

  <div class="field">
    <%= form.label :twentyone %>
    <%= form.check_box :twentyone, id: :event_twentyone %>
  </div>

  <div class="field">
    <%= form.label :recurring %>
    <%= form.check_box :recurring, id: :event_recurring %>
  </div>

  <div class="field">
    <%= form.label :recurrence_freq %>
    <%= form.text_field :recurrence_freq, id: :event_recurrence_freq %>
  </div>

  <div class="field">
    <%= form.label :recurrence_amt %>
    <%= form.number_field :recurrence_amt, id: :event_recurrence_amt %>
