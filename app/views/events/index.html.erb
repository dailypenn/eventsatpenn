<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Description</th>
      <th>Location</th>
      <th>Category</th>
      <th>Twentyone</th>
      <th>Recurring</th>
      <th>Recurrence freq</th>
      <th>Recurrence amt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.category %></td>
        <td><%= event.twentyone %></td>
        <td><%= event.recurring %></td>
        <td><%= event.recurrence_freq %></td>
        <td><%= event.recurrence_amt %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

