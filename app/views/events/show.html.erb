<h1 class="pill"><%= @event.title %></h1>

<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default filled list-all show-event">
      <p><strong>Location:</strong> <%= @event.location %></p>

      <p><strong>Time:</strong>
      <% if @event.start_date.to_date == @event.end_date.to_date %>
        <% if @event.all_day %>
          <%= @event.start_date.strftime("%A, %B %d, %Y, all day") %>
        <% else %>
          <%= @event.start_date.strftime("%A, %B %d, %Y from %l:%M %P") %>
          to <%= @event.end_date.strftime("%l:%M %P") %>
        <% end %>
      <% else %>
        From <%= @event.start_date.strftime("%A, %B %d, %Y at %l:%M %P") %>
        to <%= @event.end_date.strftime("%A, %B %d, %Y at %l:%M %P") %>
      <% end %>
      </p>

      <p><strong>Hosted by:</strong> <%= link_to @event.org.name, @event.org %></p>

      <p><strong>Category:</strong> <%= @event.category %></p>

      <% if @event.twentyone %>
        <p>This is a 21+ event!</p>
      <% end %>

      <% unless @event.description.blank? %>
        <p><strong>Description:</strong> <%= @event.description %></p>
      <% end %>

      <div class="row">
        <% if @event.org.users.include? current_user %>
          <%= link_to 'Edit this event', edit_event_path(@event) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
