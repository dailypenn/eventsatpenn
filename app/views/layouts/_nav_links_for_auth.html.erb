<% if user_signed_in? %>
  <% if current_user.admin? %>
    <li><%= link_to "Admin", '/admin' %></li>
  <% end %>
  <li><%= link_to "Welcome, #{current_user.first_name}", current_user %></li>
  <li><%= link_to 'Sign out', signout_path %></li>
<% else %>
  <li><%= link_to 'Sign in', signin_path %></li>
<% end %>
