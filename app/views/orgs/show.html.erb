<% name = @org.name %>

<h1 class="pill"><%= name %></h1><br>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">About <%= name %>
        <% if @org.users.include? current_user %>
          <%= link_to 'Edit', edit_org_path(@org), { class: 'pull-right' } %>
        <% end %>
        </h3>
      </div>

      <div class="panel-body">
        <% unless @org.bio.empty? %>
          <h3 class="org-headers">Description:</h3>
          <p><%= @org.bio %></p>
        <% end %>

        <% unless @org.website.empty? %>
          <a href="<%= @org.website %>" target="_blank"><%= name %> Website &#10140;</a> <br>
        <% end %>
        <% unless @org.fbID.nil? %>
          <a href="https://facebook.com/<%= @org.fbID %>" target="_blank"><%= name %> on Facebook &#10140;</a>
        <% end %>

        <h3>Admins:</h3>
        <ul>
          <% @org.users.each do |user| %>
            <li><%= link_to user.full_name, user %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-6 right-hand-panel">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Upcoming Events</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @org.events.each do |event| %>
            <li><%= link_to event.title, event %> on <%= event.start_date %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

</div>
